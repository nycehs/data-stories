{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "layer":[
    {
    "data":{
    "url": "https://raw.githubusercontent.com/nycehs/NYC_geography/master/PUMA_or_Subborough.topo.json",
    "format": {"type": "topojson", "feature": "collection"}
    },
    "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
  },{
  "data": {
    "url": "https://raw.githubusercontent.com/nycehs/NYC_geography/master/PUMA_or_Subborough.topo.json",
    "format": {"type": "topojson", "feature": "collection"}
  },
  "transform": [
    {
      "lookup": "properties.PUMA",
      "from": {
        "data": {"url": "HOUSING_DATA.csv"},
        "key": "GEOCODE",
        "fields": [
          "GEOCODE",
          "heating-breakdowns"
        ]
      },
      "default": "no data"
    }
  ],

  "mark": {"type": "geoshape", "stroke": "#ffffff"},
  "encoding": {
    "color": {
      "bin": false,
      "field": "heating-breakdowns",
      "type": "quantitative",
      "legend": {
        "title": "Heating breakdowns",
        "titleFontSize": 12,
        "orient":"top-left",
        "gradientLength": 100
    },
      "scale": {"scheme": {"name": "purples", "extent": [0.5, 1.0]}}
    },
    "strokeWidth": {
      "condition": [],
      "value": 0.5
    },
    "tooltip": [
      {
        "field": "properties.GEONAME",
        "type": "nominal",
        "title": "Neighborhood"
      },
      {
        "field": "heating-breakdowns",
        "type": "quantitative",
        "title": "Percent of homes with heating breakdowns"
      }
    ]
  }
}]
}